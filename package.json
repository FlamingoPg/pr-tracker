{
  "name": "pr-tracker",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\" \"*.{json,js,ts,md}\" \".github/**/*.{yml,yaml}\" \"src-tauri/tauri.conf.json\" && cd src-tauri && cargo fmt",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\" \"*.{json,js,ts,md}\" \".github/**/*.{yml,yaml}\" \"src-tauri/tauri.conf.json\" && cd src-tauri && cargo fmt --check",
    "preview": "vite preview",
    "tauri": "tauri"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-shell": "^2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.2.1",
    "prettier": "^3.8.1",
    "typescript": "^5.0.2",
    "vite": "^5.0.0"
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "printWidth": 100,
    "trailingComma": "es5"
  }
}
