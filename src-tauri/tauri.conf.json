{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PR Tracker",
  "version": "0.1.0",
  "identifier": "com.prtracker.dev",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "PR Tracker",
        "width": 1200,
        "height": 800,
        "minWidth": 320,
        "minHeight": 220,
        "center": true,
        "decorations": true,
        "transparent": true,
        "shadow": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png"
    ]
  }
}
